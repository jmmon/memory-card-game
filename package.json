{
  "packageManager": "pnpm@8.10.0",
  "name": "memory-card-game",
  "description": "Match all pairs to clear the board!",
  "engines": {
    "node": ">=15.0.0"
  },
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "qwik build",
    "build.client": "vite build",
    "build.preview": "vite build --ssr src/entry.preview.tsx",
    "build.server": "vite build -c adapters/node-server/vite.config.ts",
    "build.types": "tsc --incremental --noEmit",
    "deploy": "echo 'Run \"npm run qwik add\" to install a server adapter'",
    "dev": "vite --mode ssr",
    "dev.debug": "node --inspect-brk ./node_modules/vite/bin/vite.js --mode ssr --force",
    "db.seed": "node src/v3/db/seed.mjs",
    "fmt": "prettier --write .",
    "fmt.check": "prettier --check .",
    "lint": "eslint \"src/**/*.ts*\"",
    "lint.fix": "eslint \"src/**/*.ts*\" --fix",
    "preview": "qwik build preview && pnpm vite preview --open",
    "serve": "node server/entry.node-server",
    "start": "vite --open --mode ssr",
    "qwik": "qwik"
  },
  "devDependencies": {
    "@builder.io/qwik": "^1.3.5",
    "@builder.io/qwik-city": "^1.3.5",
    "@types/compression": "^1.7.5",
    "@types/eslint": "8.40.2",
    "@types/node": "^20.11.0",
    "@types/pg": "^8.10.9",
    "@typescript-eslint/eslint-plugin": "5.61.0",
    "@typescript-eslint/parser": "5.61.0",
    "autoprefixer": "^10.4.16",
    "compression": "^1.7.4",
    "drizzle-kit": "^0.19.13",
    "eslint": "^8.56.0",
    "eslint-plugin-qwik": "^1.3.5",
    "node-env-run": "^4.0.2",
    "postcss": "^8.4.33",
    "prettier": "2.8.8",
    "tailwindcss": "^3.4.1",
    "typescript": "5.1.6",
    "undici": "5.22.1",
    "vite": "^4.5.1",
    "vite-tsconfig-paths": "^4.2.3"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.28.6",
    "jabber": "^1.5.3",
    "pm2": "^5.3.0",
    "postgres": "^3.4.3",
    "zod": "^3.22.4"
  }
}
